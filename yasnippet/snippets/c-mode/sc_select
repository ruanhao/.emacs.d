# -*- mode: snippet -*-
# name: sc_select
# key: selfd
# --
fd_set rset, allset;
int nready, maxfd;

FD_ZERO(&allset);
FD_SET(${1:fd1}, &allset);
maxfd = $1;

while (1) {
    rset = allset;
    nready = Select(maxfd + 1, &rset, NULL, NULL, NULL);

    if (FD_ISSET($1, &rset)) {
        $0 /* TO DO */
    }
}